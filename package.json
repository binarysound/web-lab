{
  "name": "not-a-bean",
  "version": "0.1.0",
  "repository": "https://github.com/binarysound/not-a-bean",
  "author": "binarysound",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "@types/react-test-renderer": "^16.0.2",
    "@types/socket.io": "^1.4.38",
    "@types/socket.io-client": "^1.4.32",
    "chalk": "^2.4.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "react-test-renderer": "^16.5.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.0.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1"
  },
  "scripts": {
    "heroku-postbuild": "yarn run build",
    "build-client": "webpack --mode production --config webpack.config.js --env.target=client",
    "build-server": "webpack --mode production --config webpack.config.js --env.target=server",
    "build": "yarn run build-server && yarn run build-client",
    "test": "jest",
    "lint": "tslint --project app/client/tsconfig.json && tslint --project app/server/tsconfig.json",
    "start": "node build/server/main.bundle.js",
    "dev": "node devRun.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/setupJest.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
